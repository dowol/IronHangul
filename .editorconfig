### EDITORCONFIG

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.cs]
indent_size = 4
csharp_align_multiline_expression = true
csharp_brace_style = next_line
csharp_remove_spaces_on_blank_lines = true
csharp_space_before_comma = true
csharp_trailing_comma_in_multiline_lists = true
csharp_trailing_comma_in_singleline_lists = false